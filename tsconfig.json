{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "pretty": true,
    "types": [
      "node"
    ],
    "lib": [
      "esnext",
      "dom"
    ],
    "allowSyntheticDefaultImports": true
  }
}
